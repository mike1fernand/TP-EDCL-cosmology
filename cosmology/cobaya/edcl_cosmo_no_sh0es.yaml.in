# edcl_cosmo_no_sh0es.yaml.in
# Template YAML matching the paper's reproducibility snippet (Sec. Methods).
# IMPORTANT: Do not edit this file directly; use cosmology/scripts/render_yamls.py to
# substitute paths and output directories without assumptions.

likelihood:
  planck_2018_highl_plik.TTTEEE: null
  planck_2018_lowl.TT: null
  planck_2018_lowl.EE: null
  planck_2018_lensing.clik: null
  desi_dr2.bao: null
  desi_dr2.full_shape: null
  pantheonplus.PantheonPlus: null

theory:
  classy:
    path: __CLASS_PATH__
    extra_args:
      edcl_on: True
      kappa_tick: 0.08333333333333333   # 1/12
      c4: 0.06                           # Laplacian channel coefficient (disabled in background per paper notes)

params:
  # Standard cosmology params (example: keep defaults in classy; Cobaya will request as needed by likelihoods)
  # EDCL params (primary):
  alpha_R:
    prior: {min: 0.05, max: 0.20}
    ref: {dist: norm, loc: 0.12, scale: 0.02}
    proposal: 0.01
  log10_l0:
    prior: {min: -22, max: -20}
    ref: {dist: norm, loc: -21, scale: 0.5}
    proposal: 0.3

output: __OUTPUT_DIR__

sampler:
  mcmc:
    Rminus1_stop: 0.01
    Rminus1_cl_stop: 0.02
    covmat: auto
    drag: True
    oversample_power: 0.4
    proposal_scale: 2.0
    seed: 42
